<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textAppearanceButton">@style/AppTheme.ButtonTextAppearance</item>
        <item name="vpiIconPageIndicatorStyle">@style/CustomIconIndicator</item>

        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
    </style>

    <style name="AppTheme.ButtonTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/default_edit_text_style</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="CustomIconIndicator" parent="Widget.IconPageIndicator">
        <item name="android:divider">@drawable/indicator_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:background">@drawable/btn_facebook_normal</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Settings.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ababab</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textAppearanceButton">@style/AppTheme.ButtonTextAppearance</item>
        <item name="vpiIconPageIndicatorStyle">@style/CustomIconIndicator</item>

        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/app_theme_btn_selector</item>
    </style>

    <style name="AppTheme.ButtonTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/default_edit_text_style</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="CustomIconIndicator" parent="Widget.IconPageIndicator">
        <item name="android:divider">@drawable/indicator_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">10dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:background">@drawable/btn_facebook_normal</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TextView.Settings" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Switch" parent="android:Theme.Holo.Light">
        <item name="android:thumb">@drawable/apptheme_switch_inner_holo_light</item>
        <item name="android:track">@drawable/apptheme_switch_track_holo_light</item>
    </style>

    <style name="AppTheme.SwitchButton">
        <item name="sb_animationVelocity">6</item>
        <item name="sb_insetBottom">16dp</item>
        <item name="sb_insetTop">16dp</item>
        <item name="sb_insetLeft">16dp</item>
        <item name="sb_insetRight">16dp</item>
        <item name="sb_measureFactor">1.4</item>
        <item name="sb_offDrawable">@drawable/md_back_off</item>
        <item name="sb_onDrawable">@drawable/md_back_on</item>
        <item name="sb_thumbDrawable">@drawable/md_thumb</item>
        <item name="sb_thumb_margin">-17dp</item>
    </style>

    <style name="AppTheme.SwitchButton.Material" parent="AppTheme.SwitchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/container_unknown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_unknown"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/none"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_unknown"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/red_border"
            android:padding="10dp"
            android:src="@drawable/ic_question_mark_normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_male"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/container_unknown"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_male"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/male"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_male"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/red_border"
            android:padding="10dp"
            android:src="@drawable/ic_male_normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_female"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/container_male"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_female"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="-10dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/female"
            android:textColor="@color/button_text"
            android:textSize="@dimen/small_text"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_female"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/red_border"
            android:padding="10dp"
            android:src="@drawable/ic_female_normal" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/container_female"
        android:background="@drawable/text_field">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/ic_cross_light_delete" />

        <com.sdex.webteb.view.PanEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/delete"
            android:background="@drawable/edit_text_without_border"
            android:gravity="right|center_vertical"
            android:hint="@string/type_child_name"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="@dimen/default_text_size" />

    </RelativeLayout>

</RelativeLayout>
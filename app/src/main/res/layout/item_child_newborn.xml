<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/btn_white_border">

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_notfication_cancel"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/type_child_name"
        android:gravity="right|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/button_text"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:background="@drawable/edit_text_without_border"
        android:singleLine="true"
        android:layout_weight="2"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/button_text"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/container_female"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/text_female"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp"
            android:text="@string/female"
            android:textSize="@dimen/small_text"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>
        
        <ImageView
            android:id="@+id/image_female"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_female_normal"/>
        
        </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/button_text"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/container_male"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_male"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:text="@string/male"
            android:textSize="@dimen/small_text"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/image_male"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_male_normal"/>

    </LinearLayout>

</LinearLayout>
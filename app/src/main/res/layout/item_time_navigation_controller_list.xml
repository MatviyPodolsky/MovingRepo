<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_time"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/time_navigation_controller_item_size"
            android:layout_height="12dp"
            android:gravity="center"
            android:id="@+id/label"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/time_navigation_controller_item_padding"
            android:layout_marginRight="@dimen/time_navigation_controller_item_padding"
            android:text="label"
            android:textSize="10sp"
            android:layout_marginBottom="3dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="@dimen/time_navigation_controller_item_size"
            android:layout_height="@dimen/time_navigation_controller_item_size"
            android:layout_marginLeft="@dimen/time_navigation_controller_item_padding"
            android:layout_marginRight="@dimen/time_navigation_controller_item_padding"
            android:gravity="center"
            android:id="@+id/value"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

    </LinearLayout>

</RelativeLayout>